<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grain_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderGrainIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="10"
            android:value="5"
            android:stepSize="0.1"
            android:contentDescription="@string/grain_intensity_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textGrainIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grain_intensity_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/halation_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderHalationIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="1"
            android:value="0.5"
            android:stepSize="0.1"
            android:contentDescription="@string/halation_intensity_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textHalationIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/halation_intensity_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderHalationSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="25"
            android:valueTo="100"
            android:value="75"
            android:stepSize="1"
            android:contentDescription="@string/halation_size_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textHalationSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/halation_size_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bloom_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderBloomIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="1"
            android:value="0.3"
            android:stepSize="0.1"
            android:contentDescription="@string/bloom_intensity_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textBloomIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bloom_intensity_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderBloomSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="25"
            android:valueTo="100"
            android:value="45"
            android:stepSize="1"
            android:contentDescription="@string/bloom_size_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textBloomSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bloom_size_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView> 