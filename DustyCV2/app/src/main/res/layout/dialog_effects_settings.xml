<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/film_type"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btnFilmInfo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="@string/film_info"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerFilmType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:contentDescription="@string/film_type_description"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grain_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderGrainIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="15"
            android:value="5"
            android:stepSize="0.5"
            android:contentDescription="@string/grain_intensity_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textGrainIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grain_intensity_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/halation_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderHalationIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="1"
            android:value="0.5"
            android:stepSize="0.1"
            android:contentDescription="@string/halation_intensity_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textHalationIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/halation_intensity_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderHalationSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="25"
            android:valueTo="100"
            android:value="75"
            android:stepSize="1"
            android:contentDescription="@string/halation_size_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textHalationSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/halation_size_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bloom_settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderBloomIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="1"
            android:value="0.3"
            android:stepSize="0.1"
            android:contentDescription="@string/bloom_intensity_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textBloomIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bloom_intensity_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderBloomSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="25"
            android:valueTo="100"
            android:value="45"
            android:stepSize="1"
            android:contentDescription="@string/bloom_size_format"
            app:labelBehavior="floating"/>

        <TextView
            android:id="@+id/textBloomSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bloom_size_format"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView> 